<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardElevation="4dp"
    android:layout_marginBottom="10dp"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/food_img"
            android:scaleType="centerCrop"
            android:src="@drawable/pizza_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:paddingVertical="10dp"
            android:background="@color/colorOverlayBackground"
            android:id="@+id/food_name_txt"
            android:text="Name of Food"
            style="@style/OpenSanBigBoldTxt"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/food_price_txt"
            style="@style/OpenSanBigBoldTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/food_name_txt"
            android:layout_alignBottom="@+id/food_name_txt"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:gravity="right"
            android:text="Price of Food" />

        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/food_name_txt"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/money_white_icon" />
    </RelativeLayout>

</android.support.v7.widget.CardView>